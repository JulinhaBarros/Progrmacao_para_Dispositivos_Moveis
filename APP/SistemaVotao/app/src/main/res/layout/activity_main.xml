<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5">

    <!-- Título do sistema -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Urna Eletrônica"
        android:textSize="24sp"
        android:textColor="#333"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="16dp" />

    <!-- Campo para exibir o cargo e o número digitado -->
    <TextView
        android:id="@+id/textViewCargo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cargo"
        android:textSize="18sp"
        android:textColor="#555"/>

    <TextView
        android:id="@+id/textViewNumero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="28sp"
        android:textColor="#000"
        android:gravity="center"
        android:background="#E0E0E0"
        android:padding="8dp"
        android:layout_marginBottom="16dp" />

    <!-- Imagem do candidato -->
    <ImageView
        android:id="@+id/imageViewCandidato"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="Imagem do Candidato"
        android:layout_marginBottom="16dp" />

    <!-- Teclado numérico -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:layout_marginBottom="16dp">

        <!-- Botões numéricos -->
        <Button android:id="@+id/button1" style="@style/TecladoButton" android:text="1"/>
        <Button android:id="@+id/button2" style="@style/TecladoButton" android:text="2"/>
        <Button android:id="@+id/button3" style="@style/TecladoButton" android:text="3"/>
        <Button android:id="@+id/button4" style="@style/TecladoButton" android:text="4"/>
        <Button android:id="@+id/button5" style="@style/TecladoButton" android:text="5"/>
        <Button android:id="@+id/button6" style="@style/TecladoButton" android:text="6"/>
        <Button android:id="@+id/button7" style="@style/TecladoButton" android:text="7"/>
        <Button android:id="@+id/button8" style="@style/TecladoButton" android:text="8"/>
        <Button android:id="@+id/button9" style="@style/TecladoButton" android:text="9"/>
        <View android:layout_width="0dp" android:layout_height="0dp"/>
        <Button android:id="@+id/button0" style="@style/TecladoButton" android:text="0"/>
        <View android:layout_width="0dp" android:layout_height="0dp"/>
    </GridLayout>

    <!-- Botões de ação -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/buttonCorrigir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Corrigir"
            android:backgroundTint="#FF5722"
            android:textColor="#FFF"
            android:layout_margin="8dp"/>

        <Button
            android:id="@+id/buttonConfirmar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirmar"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFF"
            android:layout_margin="8dp"/>
    </LinearLayout>
</LinearLayout>

